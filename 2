class LazyGraph:
    """Graph implentation"""

    curr_id = 0

    def __init__(self):
        LazyGraph.curr_id += 1
        self.id = "lazydata%s" % LazyData.curr_id

    def add_node(self, op, shape, dtype):
        return self.srcs.append(Node(op, shape, dtype))


class Node:
    def __init__(self, op, shape, dtype):
        self.op = op
        self.shape = shape
        self.dtype = dtype
        self.inputs = []
        self.outpus = []

    def add_input(input_id):
        self.inputs.append(input_id)

    def add_ouput(output_id):
        self.ouputs.append(output_id)


graph = LazyGraph()


graph.add_node("input", [10, 10], "float32")
